{
  "version": 2,
  "builds": [
      {
          "src": "api/*.js",
          "use": "@vercel/node"
      },
      {
          "src": "public/**/*",
          "use": "@vercel/static"
      }
  ],
  "rewrites": [
      {
          "source": "/api/(.*)",
          "destination": "/api/index.js"
      },
      {
          "source": "/(.*)",
          "destination": "/public/index.html"
      }
  ]
}
